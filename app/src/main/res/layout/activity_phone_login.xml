<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity">

    <EditText
        android:id="@+id/phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="180dp"
        android:padding="8dp"
        android:background="@drawable/inputs"
        android:hint="Write phone number here..."
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:drawableStart="@drawable/ic_phone_android_black_24dp"/>


    <EditText
        android:layout_below="@+id/phone_number_input"
        android:id="@+id/verification_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="4dp"
        android:padding="8dp"
        android:background="@drawable/inputs"
        android:hint="Write verification code here..."
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:inputType="number"
        android:visibility="invisible"
        android:drawableStart="@drawable/ic_security_black_24dp"/>

    <Button
        android:id="@+id/send_ver_code_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Verification Code"
        android:textAllCaps="false"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/buttons"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_below="@+id/verification_code"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/verify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:textAllCaps="false"
        android:layout_below="@+id/send_ver_code_btn"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/buttons"
        android:textColor="#fff"
        android:textSize="18sp"
        android:visibility="invisible"
        android:textStyle="bold"/>

</RelativeLayout>